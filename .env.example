# Django Core Settings
# Generate SECRET_KEY with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-minimum-50-characters-long

# Debug mode (set to False in production)
DEBUG=True

# Allowed hosts (comma-separated, no spaces)
ALLOWED_HOSTS=localhost,127.0.0.1

# Model Configuration
# Path to model directory (relative or absolute)
MODEL_DIR=./static

# Database Configuration (optional - defaults to SQLite)
# For PostgreSQL: postgresql://user:password@localhost:5432/dbname
# DATABASE_URL=postgresql://user:password@localhost:5432/movie_recommender

# CORS Configuration (optional - for separate frontend)
# Comma-separated list of allowed origins
# CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Admin Panel (optional)
# Set to True to enable Django admin panel at /admin/
ADMIN_ENABLED=False

# Deployment Settings (for Render, Heroku, etc.)
# RENDER_EXTERNAL_HOSTNAME=your-app.onrender.com

# Redis Configuration (optional - for production caching)
# REDIS_URL=redis://localhost:6379/0

# Logging Level (optional)
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
# LOG_LEVEL=INFO

# Email Configuration (optional - for notifications)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# Sentry Configuration (optional - for error tracking)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Performance Settings (optional)
# MAX_RECOMMENDATIONS=15
# CACHE_TIMEOUT=3600
# SEARCH_CACHE_TIMEOUT=300
